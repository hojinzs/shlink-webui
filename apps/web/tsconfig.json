{
  "extends": "@shlink-webui/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@views/*": ["./views/*"],
      "@pages/*": ["./views/*"],
      "@widgets/*": ["./widgets/*"],
      "@features/*": ["./features/*"],
      "@entities/*": ["./entities/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}